#!/bin/bash



password_randomizer() {
    if [ "$1" -le 0 ]; then
        echo "enter a positive value for the length of the string"
        exit 1
    fi
    local length=$1
    local password=$(cat /dev/urandom | tr -dc 'A-Za-z0-9!@#$%^&*()' | fold -w $length | head -n 1)
    echo $password
}




password_randomizer $1
