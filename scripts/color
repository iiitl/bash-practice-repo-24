#!/usr/bin/env bash

# TODO (Run this script as): color magenta && echo hello && color reset

color() {
    echo -ne "\033[$1;$2m"
}

declare -A color_mapping=(
    # TODO: Add more color values
    # Refer bash color codes
    ['magenta']=35
    ['black']=30
    ['red']=31
    ['green']=32
    ['yellow']=33
    ['blue']=34
    ['cyan']=36
    ['light_gray']=37
    ['dark_gray']=90
    ['light_red']=91
    ['light_green']=92
    ['light_yellow']=93
    ['light_blue']=94
    ['light_magenta']=95
    ['light_cyan']=96
    ['white']=97
    ['default']=39
    ['bold_black']=1;30
    ['bold_red']=1;31
    ['bold_green']=1;32
    ['bold_yellow']=1;33
    ['bold_blue']=1;34
    ['bold_magenta']=1;35
    ['bold_cyan']=1;36
    ['bold_white']=1;37
    ['color_x']=123
    ['color_y']=456
    ['color_z']=789

)

if [[ $1 == 'reset' ]]; then
    color 0 00
else
    color 1 ${color_mapping[$1]}
fi

