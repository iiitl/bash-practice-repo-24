#!/usr/bin/env bash

# Get the CPU die temperature in millidegree Celsius
temp_Kelvin=$(grep -E 'Tctl|Tdie|Package id' /sys/class/hwmon/hwmon*/temp*_label | head -n1 | cut -d':' -f1 | sed 's/label/input/' | xargs cat)

